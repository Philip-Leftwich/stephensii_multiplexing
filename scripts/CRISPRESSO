#!/bin/bash
# CRISPResso2 Analysis Script
# Codes used in CRISPResso2 Analysis. Each section is labeled with the sample name.

# ------------------- zpg3’Cas9;cdg338-384 -------------------
CRISPResso \
  --fastq_r1 1590-2301_R1_001.fastq.gz \
  --fastq_r2 1590-2301_R2_001.fastq.gz \
  --trim_sequences \
  --trimmomatic_options_string "ILLUMINACLIP:TruSeq3-PE.fa:2:30:10:2:True" \
  --amplicon_seq "" \
  -g "GGAGCGTACAAAGTTCATGC,TACGGATCACCTGGACCCAG,GGGAAACATTCCGGGTGTTG,gcagcaacttaatcaagcca"

# ------------------- SDA-500 -------------------
CRISPResso \
  --fastq_r1 SDA-500_R1_001.fastq.gz \
  --fastq_r2 SDA-500_R2_001.fastq.gz \
  --trim_sequences \
  --trimmomatic_options_string "ILLUMINACLIP:TruSeq3-PE.fa:2:30:10:2:True" \
  --amplicon_seq "" \
  -g "GGAGCGTACAAAGTTCATGC,TACGGATCACCTGGACCCAG,GGGAAACATTCCGGGTGTTG,gcagcaacttaatcaagcca"

# ------------------- zpg3’Cas9;cdg384 -------------------
CRISPResso \
  --fastq_r1 1590x1759DH_R1_001.fastq.gz \
  --fastq_r2 1590x1759DH_R2_001.fastq.gz \
  --trim_sequences \
  --trimmomatic_options_string "ILLUMINACLIP:TruSeq3-PE.fa:2:30:10:2:True" \
  --amplicon_seq "" \
  -g "GCAGCAACTTAATCAAGCCA"

# ------------------- zpg3’Cas9;cdg225 -------------------
CRISPResso \
  --fastq_r1 1590x2360B5_R1_001.fastq.gz \
  --fastq_r2 1590x2360B5_R2_001.fastq.gz \
  --trim_sequences \
  --trimmomatic_options_string "ILLUMINACLIP:TruSeq3-PE.fa:2:30:10:2:True" \
  --amplicon_seq "TAGCGGCCAAGGTGGGATTTGTGGAGGATCGTGCTACGAAAGCGTTGGTGCGAAAGCTTGACATCCGTCACCGCGGTTCGGTTGGTCGAGGGCCGGTGATGAACTTGCCGCGAACGCACCGTCATCCGCAGTGTGATTTTAACGCGCGCTACCGGTCGGCCAATGGGACTTGCAACAACAAGGAGCGTCCGTACGAGTATGGCGTTGCGATGATACCGTTCCGTCGTCAGTTAAACCCGGACTATGGTGATGGCATTTCGGCGCCACGTGCTTCCGTCGA" \
  -g "CGCGCGTTAAAATCACACTG"

echo "CRISPResso2 analysis commands completed."
